.center-wrapper {
	max-width: 980px;

	margin: 0 auto;
	padding-left: 40px;
	padding-right: 40px;
}

@media (max-width: desktop-width - 1) {
	.center-wrapper {
		padding-left: 30px;
		padding-right: 30px;
	}
}

@media (max-width: tablet-width - 1) {
	.center-wrapper {
		padding-left: 20px;
		padding-right: 20px;
	}
}
