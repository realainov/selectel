.page-header__center-wrapper {
	min-height: 363px;

	padding-top: 52px;
	padding-right: 380px;

	background-image: url('../images/page-header/server-desktop.png');
	background-repeat: no-repeat;
	background-position: right top;
}

.page-header__title {
	margin-bottom: 19px;

	font-size: 32px;
	line-height: 1.2;
}

.page-header__text {
	max-width: 545px;

	margin-bottom: 24px;
}

.page-header__button {
	margin-bottom: 19px;
}

@media (max-width: desktop-width - 1) {
	.page-header__center-wrapper {
		min-height: 247px;

		padding-right: 325px;
		padding-top: 29px;

		background-image: url('../images/page-header/server-tablet.png');
		background-position: right 35px top;
	}

	.page-header__title {
		margin-bottom: 17px;

		font-size: 26px;
	}

	.page-header__text {
		margin-bottom: 25px;
	}
}

@media (max-width: tablet-width - 1) {
	.page-header__center-wrapper {
		padding-right: 20px;
		padding-bottom: 131px;
		padding-top: 0;

		background-image: url('../images/page-header/server-mobile.png');
		background-position: right 28px bottom;
	}

	.page-header__title {
		margin-bottom: 19px;

		font-size: 18px;
	}

	.page-header__text {
		margin-bottom: 25px;
	}
}
