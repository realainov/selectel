html {
	height: 100%;

	position: relative;

	box-sizing: border-box;

	overflow-x: hidden;
}

*,
*::before,
*::after {
	box-sizing: inherit;
}

body {
	display: flex;
	flex-direction: column;

	min-width: 320px;
	min-height: 100%;

	margin: 0;

	position: relative;

	font-family: gotham-pro;
	font-size: 18px;
	line-height: 1.25;
	letter-spacing: 0.0025em;
	hyphens: auto;

	overflow-x: hidden;
}

a {
	color: inherit;

	text-decoration: none;
}

picture img {
	display: block;
}

button {
	border: none;

	background-color: transparent;

	cursor: pointer;

	&:disabled {
		cursor: default;
	}
}

.visually-hidden {
	position: absolute;
	overflow: hidden;
	clip: rect(0 0 0 0);
	width: 1px;
	height: 1px;
	padding: 0;
	margin: -1px;
	border: 0;
}

@media (max-width: desktop-width - 1) {
	body {
		font-size: 16px;
		line-height: 1.2;
	}
}

@media (max-width: tablet-width - 1) {
	body {
		font-size: 12px;
		line-height: 1.2;
	}
}
